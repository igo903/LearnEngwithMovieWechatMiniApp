/**index.wxss**/
.default{
  background: #efefef;
  width:100%;
  height: 100%;
  min-height: 97.6%;
}
.oneRow{
  width:100%;
  margin:40rpx 0rpx 0rpx;
  font-size: 28rpx;
  color: #fff;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start; 
  position: relative;
}
.oneRow .avatar{
  width:70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  background: #ccc;
  margin:0 40rpx;
}
.oneRow.reverse{
  flex-direction: row-reverse;
}

.sentence{background: #fff;color: #4a4a4a;}
.sentence_reverse{background: #1aad19;color:#fff;}
.sentence, .sentence_reverse {
   position: relative;
   border-radius:8px;
   font-size: 24rpx;
   display: flex;
   flex-wrap: wrap;
   text-align: left;
   margin-top:10rpx;
   padding:20rpx 30rpx 20rpx 30rpx;
   line-height: 36rpx;
   max-width: 340rpx;
   /* min-height: 44rpx;  */
   /* align-items: top; */
}
.sentence_reverse:before{
   content:"";
   position: absolute;
   left: 100%;
   top: 13rpx;
   width: 0;
   height: 0;
   border-top: 10rpx solid transparent;
   border-left: 24rpx solid #1aad19;
   border-bottom: 10rpx solid transparent;
}
.sentence:before {
   content:"";
   position: absolute;
   right: 100%;
   top: 13rpx;
   width: 0;
   height: 0;
   border-top: 10rpx solid transparent;
   border-right: 24rpx solid #fff;
   border-bottom: 10rpx solid transparent;
}





.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}




.talkbubble {
   width: 120px;
   height: 80px;
   background: green;
   position: relative;
   border-radius:10px;
}
.talkbubble:before {
   content:"";
   position: absolute;
   right: 100%;
   top: 26px;
   width: 0;
   height: 0;
   border-top: 13px solid transparent;
   border-right: 26px solid green;
   border-bottom: 13px solid transparent;
}